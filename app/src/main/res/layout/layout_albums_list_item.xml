<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/pL"
    android:paddingRight="@dimen/pL"
    android:paddingTop="@dimen/ps"
    android:paddingBottom="@dimen/ps"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ali_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/hlx"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ali_name"
        android:text="Name"
        android:textColor="@color/fontGray"
        android:textSize="@dimen/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/pL"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/ali_count"
        app:layout_constraintLeft_toRightOf="@id/ali_img"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/ali_count"
        android:text="178"
        android:textSize="@dimen/fs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ps"
        app:layout_constraintTop_toBottomOf="@id/ali_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/ali_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>